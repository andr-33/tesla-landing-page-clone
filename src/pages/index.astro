---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tesla">
  <main>
    <header
      class="flex justify-between pt-2 px-8 w-full fixed top-0 z-10 text-white"
    >
      <div class="flex flex-grow basis-0">
        <svg
          class="w-32 h-6"
          viewBox="0 0 342 35"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M0 .1a9.7 9.7 0 0 0 7 7h11l.5.1v27.6h6.8V7.3L26 7h11a9.8 9.8 0 0 0 
            7-7H0zm238.6 0h-6.8v34.8H263a9.7 9.7 0 0 0 6-6.8h-30.3V0zm-52.3 6.8c3.6-1 6.6-3.8 
            7.4-6.9l-38.1.1v20.6h31.1v7.2h-24.4a13.6 13.6 0 0 0-8.7 7h39.9v-21h-31.2v-7h24zm116.2 
            28h6.7v-14h24.6v14h6.7v-21h-38zM85.3 7h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 
            13.8h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 14.1h26a9.6 9.6 0 0 0 
            7.1-7H78.3a9.6 9.6 0 0 0 7 7zM308.5 7h26a9.6 9.6 0 0 0 7-7h-40a9.6 9.6 0 0 0 7 7z"
            fill="currentColor"></path></svg
        >
      </div>

      <nav>
        <ul class="flex text-sm font-semibold text-white [&>li]:px-4">
          <li><a href="#">Modelo S</a></li>
          <li><a href="#">Modelo 3</a></li>
          <li><a href="#">Modelo X</a></li>
          <li><a href="#">Modelo Y</a></li>
          <li><a href="#">Powerwall</a></li>
          <li><a href="#">Carga</a></li>
        </ul>
      </nav>

      <nav class="flex flex-grow basis-0 justify-end">
        <ul class="flex text-sm font-semibold text-white [&>li]:px-4">
          <li><a href="">Soporte</a></li>
          <li><a href="">Tienda</a></li>
          <li><a href="">Cuenta</a></li>
          <li><a href="">Menú</a></li>
        </ul>
      </nav>
    </header>

    <section
      class="h-screen w-screen overflow-hidden relative bg-black text-center"
    >
      <div class="relative z-10 flex flex-col h-full">
        <header>
          <h2 class="pt-40 text-white text-4xl font-medium">
            Disfrute de Tesla
          </h2>
          <p class="text-white text-sm">
            Programa una prueba de conducción hoy mismo
          </p>
        </header>

        <footer class="flex flex-col flex-grow justify-end mb-4">
          <p><a class="font-bold" href="#">Prueba de conducción</a></p>
        </footer>
      </div>

      <div class="absolute top-0 bottom-0 w-full h-full">
        <video
          class="object-center object-cover w-full h-full"
          src="/home_video.webm"
          autoplay
          muted
          loop></video>
      </div>
    </section>
  </main>
</Layout>
