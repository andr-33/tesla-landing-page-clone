---
import Logo from "./Logo.astro";
---

<header
  id="nav-bar"
  class="flex justify-between pt-2 px-8 w-full fixed top-0 z-20"
>
  <div class="flex flex-grow basis-0">
    <Logo />
  </div>

  <nav>
    <ul
      class="flex text-base font-normal text-current [&>li]:px-4 transition-colors"
    >
      <li><a href="#">Modelo S</a></li>
      <li><a href="#">Modelo 3</a></li>
      <li><a href="#">Modelo X</a></li>
      <li><a href="#">Modelo Y</a></li>
      <li><a href="#">Powerwall</a></li>
      <li><a href="#">Carga</a></li>
    </ul>
  </nav>

  <nav class="flex flex-grow basis-0 justify-end">
    <ul
      class="flex text-base font-normal text-current [&>li]:px-4 transition-colors"
    >
      <li><a href="">Soporte</a></li>
      <li><a href="">Tienda</a></li>
      <li><a href="">Cuenta</a></li>
      <li><a href="">Men√∫</a></li>
    </ul>
  </nav>
</header>

<script>
  const navBar = document.querySelector("#nav-bar") as HTMLElement;

  const observerOptions = {
    root: null,
    rootMargin: "0px",
    threshold: 0.9,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      const { isIntersecting } = entry;
      if (isIntersecting) {
        const color = entry.target.getAttribute("data-header-color");
        navBar.style.color = color;
      }
    });
  }, observerOptions);

  const sections = document.querySelectorAll(".section");
  sections.forEach((section) => observer.observe(section));
</script>
